<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <!-- Basic favicon -->
<link rel="icon" href="/chatting.gif"  type="image/x-icon" />

<!-- PNG favicons for higher resolution -->
<link rel="icon" type="/favicon.ico" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

<!-- Apple Touch Icon (iOS home screen) -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <style>
        /* Increase favicon size in browser tab (note: limited control) */
        link[rel="icon"] {
            width: 32px;
            height: 32px;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .animate-fade-in {
            animation: fadeIn 0.6s ease-out forwards;
        }
        
        .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1.5s ease-in-out;
            background-size: cover;
            background-position: center;
        }
        
        .slide.active {
            opacity: 1;
        }
        
        .gradient-overlay {
            background: linear-gradient(to bottom, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.7) 100%);
        }
        
        .input-focus-effect:focus {
            box-shadow: 0 0 0 3px rgba(229, 9, 20, 0.3);
        }
        
        .btn-glow:hover {
            box-shadow: 0 0 15px rgba(229, 9, 20, 0.5);
        }
    </style>
</head>
<body class="flex min-h-screen bg-black overflow-hidden">
    <!-- Left Panel with Slideshow -->
    <div class="hidden md:flex w-1/2 relative">
        <!-- Slideshow Container -->
        <div class="absolute inset-0">
            <!-- Slide 1 -->
            <div class="slide active" style="background-image: url('https://i.pinimg.com/736x/df/44/96/df4496259b46f6f4305a02f4f2a7b514.jpg')">
                <div class="gradient-overlay absolute inset-0 flex items-center justify-center">
                    <div class="text-center px-12 transform translate-y-10 opacity-0 transition-all duration-700 slide-content">
                        <h2 class="text-4xl font-bold text-white mb-4">Welcome to PushUp</h2>
                        <p class="text-xl text-gray-300">The ultimate collaboration platform for film professionals</p>
                    </div>
                </div>
            </div>
            
            <!-- Slide 2 -->
            <div class="slide" style="background-image: url('https://i.pinimg.com/736x/e6/f3/1a/e6f31adbbf43106a3e2008d82400a915.jpg')">
                <div class="gradient-overlay absolute inset-0 flex items-center justify-center">
                    <div class="text-center px-12 transform translate-y-10 opacity-0 transition-all duration-700 slide-content">
                        <h2 class="text-4xl font-bold text-white mb-4">Connect with Creatives</h2>
                        <p class="text-xl text-gray-300">Find your perfect production team members</p>
                    </div>
                </div>
            </div>
            
            <!-- Slide 3 -->
            <div class="slide" style="background-image: url('https://i.pinimg.com/736x/5e/06/4d/5e064d895e608a03ac025aef2ae307b2.jpg')">
                <div class="gradient-overlay absolute inset-0 flex items-center justify-center">
                    <div class="text-center px-12 transform translate-y-10 opacity-0 transition-all duration-700 slide-content">
                        <h2 class="text-4xl font-bold text-white mb-4">Showcase Your Work</h2>
                        <p class="text-xl text-gray-300">Build your professional portfolio</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Slideshow Controls -->
        <div class="absolute bottom-8 left-0 right-0 flex justify-center space-x-2 z-10">
            <button class="slide-indicator w-3 h-3 rounded-full bg-white opacity-50 transition-all duration-300" data-slide="0"></button>
            <button class="slide-indicator w-3 h-3 rounded-full bg-white opacity-50 transition-all duration-300" data-slide="1"></button>
            <button class="slide-indicator w-3 h-3 rounded-full bg-white opacity-50 transition-all duration-300" data-slide="2"></button>
        </div>
    </div>

    <!-- Right Panel with Login Form -->
    <div class="w-full md:w-1/2 bg-gray-900 flex items-center justify-center p-8 md:p-12 relative">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-5" style="background-image: url('https://i.pinimg.com/736x/0c/f0/e8/0cf0e837cc173b08b514e6403d5d8c9a.jpg);"></div>
        
        <div class="w-full max-w-md z-10">
            <!-- Logo -->
            <div class="flex justify-center mb-8">
                <div class="text-4xl font-bold text-red-600 tracking-wide"></div>
            </div>
            
            <!-- Form Container -->
            <div class=" rounded-xl p-8 shadow-2xl  border-gray-700 animate-fade-in" style="animation-delay: 0.2s; margin-top: -60px;">
                <h1 class="text-3xl font-bold text-white mb-2 text-center">Welcome Back</h1>
                <p class="text-gray-400 mb-8 text-center">Login to your professional account</p>
                
                {{#if error}}
                <div class="bg-red-900/50 border border-red-700 text-red-200 px-4 py-3 rounded-lg mb-6 text-center">
                    {{error}}
                </div>
                {{/if}}
                
                <form action="/login" method="POST" class="space-y-6">
                    <div class="space-y-1">
                        <label for="name" class="block text-gray-300 text-sm font-medium">Username</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-gray-500"></i>
                            </div>
                            <input type="text" id="name" name="name" required 
                                   class="w-full pl-10 pr-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none input-focus-effect text-white placeholder-gray-400 transition duration-200" 
                                   placeholder="Enter your username" />
                        </div>
                    </div>
                    
                    <div class="space-y-1">
                        <label for="password" class="block text-gray-300 text-sm font-medium">Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-500"></i>
                            </div>
                            <input type="password" id="password" name="password" required 
                                   class="w-full pl-10 pr-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none input-focus-effect text-white placeholder-gray-400 transition duration-200" 
                                   placeholder="••••••••" />
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-600 rounded bg-gray-700">
                            <label for="remember-me" class="ml-2 block text-sm text-gray-300">Remember me</label>
                        </div>
                        
                        <div class="text-sm">
                            <a href="/forgot-password" class="font-medium text-red-400 hover:text-red-300 transition duration-200">Forgot password?</a>
                        </div>
                    </div>
                    
                    <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200 btn-glow flex items-center justify-center">
                        <span>Sign In</span>
                        <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </form>
                
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-600"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-gray-800 text-gray-400">Or continue with</span>
                        </div>
                    </div>
                    
                    <div class="mt-6 grid grid-cols-2 gap-3">
                        <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-sm font-medium text-gray-300 hover:bg-gray-600 transition duration-200">
                            <i class="fab fa-google text-red-500 mr-2"></i> Google
                        </a>
                        
                        <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-600 rounded-md shadow-sm bg-gray-700 text-sm font-medium text-gray-300 hover:bg-gray-600 transition duration-200">
                            <i class="fab fa-apple text-gray-300 mr-2"></i> Apple
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="mt-8 text-center text-gray-400 animate-fade-in" style="animation-delay: 0.4s">
                Don't have an account? <a href="/signup" class="text-red-400 hover:text-red-300 font-medium transition duration-200">Sign up</a>
            </div>
        </div>
    </div>

    <script>
        // Slideshow functionality
        document.addEventListener('DOMContentLoaded', function() {
            const slides = document.querySelectorAll('.slide');
            const indicators = document.querySelectorAll('.slide-indicator');
            let currentSlide = 0;
            
            // Show initial slide content
            showSlideContent(currentSlide);
            
            // Auto-rotate slides
            const slideInterval = setInterval(nextSlide, 5000);
            
            // Indicator click events
            indicators.forEach(indicator => {
                indicator.addEventListener('click', function() {
                    clearInterval(slideInterval);
                    goToSlide(parseInt(this.dataset.slide));
                });
            });
            
            function nextSlide() {
                goToSlide((currentSlide + 1) % slides.length);
            }
            
            function goToSlide(n) {
                slides[currentSlide].classList.remove('active');
                indicators[currentSlide].classList.remove('!opacity-100', '!w-6');
                indicators[currentSlide].classList.add('opacity-50');
                
                currentSlide = n;
                
                slides[currentSlide].classList.add('active');
                indicators[currentSlide].classList.add('!opacity-100', '!w-6');
                indicators[currentSlide].classList.remove('opacity-50');
                
                showSlideContent(currentSlide);
            }
            
            function showSlideContent(n) {
                const slideContents = document.querySelectorAll('.slide-content');
                slideContents.forEach(content => {
                    content.classList.remove('!translate-y-0', '!opacity-100');
                });
                
                setTimeout(() => {
                    slideContents[n].classList.add('!translate-y-0', '!opacity-100');
                }, 300);
            }
            
            // Animate form elements sequentially
            const formElements = document.querySelectorAll('.animate-fade-in');
            formElements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1 + 0.2}s`;
            });
        });
    </script>
</body>
</html>